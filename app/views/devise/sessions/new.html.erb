<div class="m-auto pr-5 pl-5 pb-5 shadow-lg border" style="width: 450px; background-color: rgb(220,220,220); border-radius: 7px; position: relative; top: 10px; padding: 10px;">
<%= image_tag 'BULLIES_LOGO.png', id: "logo", class: "mt-5 mb-5 ml-5" %>
<h1>Please sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "rounded border w-100 pl-3" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "rounded border w-100 pl-3" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-secondary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>



