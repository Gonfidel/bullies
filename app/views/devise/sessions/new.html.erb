<body class="bg-dark-secondary">
  
<div class="container mx-auto mt-5 card bg-dark-dark text-dark-theme" style="width: 323px;">
<%= image_tag 'BULLIES_LOGO.png', id: "logo", class: "mx-auto my-auto" %>
<h1>Please sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "rounded border w-100 pl-3" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "rounded border w-100 pl-3" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-secondary btn-block" %>
  </div>
<% end %>

<%# render "devise/shared/links" %>
</body>



