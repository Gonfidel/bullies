<div  style="text-align: center;">

<%# ADD POST BUTTON IF SIGNED IN %>
  <% if admin_signed_in? %>
    <div class="add" >
      <%= link_to "+", new_post_path, class: "center" %>
    </div>
      <br>
  <% end %>

<%# SHOW POSTS %>
  <% @catagory.posts.each do |post| %>

    <%= post.content%>
    <%= image_tag post.image, class: "thumbnail" %>

<%# SHOW DELETE BUTTON IF SIGNED IN %>
    <% if admin_signed_in? %>
      <%= link_to '<i class="fa fa-trash"></i>'.html_safe, post, method: :delete %>      
    <% end %>

      <%# ADD HR IF NOT LAST POST %>
    <% if post != @catagory.posts.last %>  
      <hr>
    <% end %>

  <% end %>
</div>


